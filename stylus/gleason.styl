.UnderContruction
  position: absolute
  width: 100%
  height:100%
  z-index:7
  img
    position: absolute
    width: 500px
body
  color:#A4C739
.carousel-caption
  color:#A4C739
  background-color: rgba(57,177,164,.9)
@media (max-width: 768px)
  .UnderContruction
    img
      top: 10%
      left: -20%
  .carousel
    height:500px
    .carousel-inner 
      .item
        height: 500px;
        background-color: #777;
        img
          position: absolute;
          top: 0;
          left: 0;
          min-width: 100%;
          height: 500px;
@media (max-width: 400px)
  .carousel-caption
    color:#A4C739
    background-color: transparent
@media (min-width: 400px)
  .UnderContruction
    img
      top: 20%
      left: 10%
@media (min-width: 768px)
  .UnderContruction
    img
      top: 30%
      left: 30%
  .carousel
    height:450px
    .carousel-inner 
      .item
        height: 450px;
        background-color: #777;
        img
          position: absolute;
          top: 0;
          left: 0;
          min-width: 100%;
          height: 450px;
  




    
